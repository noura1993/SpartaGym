<h1>Upcoming Classes</h1>
<div class="search">
<form action="/sparta_classes" method="get">
    <label for="class-name-field">Class Name:</label>
    <input  class="search-text" type="text" name="class_name" placeholder="Search.." id="class-name-field"/>

    <label for="trainer-name-field">Trainer Name:</label>
    <input  class="search-text" type="text" name="trainer_name" placeholder="Search.." id="trainer-name-field"/>

    <label for="date-time-field">Date&Time:</label>
    <input class="search-text" type="text" name="date_time" placeholder="Search.." id="date-time-field"/>

    <input class="add" type='submit' value="Search">
  </form>
</div>
<div class="headline">
    <form action="/sparta_classes/new" method="get">
        <input class="add" type='submit' value="Add Class">
    </form>
</div>
<table class="tables-layout">
  <tr>
    <th>Class Name</th>
    <th>Capacity</th>
    <th>Trainer Name</th>
    <th>Room</th>
    <th>Date & Time</th>
    <th>Status</th>
    <th>Actions</th>
  </tr>
  <% for sparta_class in @sparta_classes %>
  <tr>
    <td><%= sparta_class.class_name %></td>
    <td><%= sparta_class.capacity %></td>
    <td><%= sparta_class.trainer_name %></td>
    <td><%= sparta_class.room %></td>
    <td><%= sparta_class.date_time[0..10] + "/" + sparta_class.date_time[10..15] %></td>
    <td><%= sparta_class.status %></td>
    <td>
        <div class="center">
          <form action="/sparta_classes/<%= sparta_class.id %>/class_members" method="get">
              <input class="action" type='submit' value="Members">
          </form>
          <form action="/sparta_classes/<%= sparta_class.id %>/edit" method="get">
              <input class="action" type='submit' value="Edit">
          </form>   
        </div>
    </td>
  </tr>
  <% end %>
</table>